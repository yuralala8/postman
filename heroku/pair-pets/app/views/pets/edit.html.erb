<div class="container">
	<center><%= image_tag @pet.image.show.url unless @pet.image.blank? %></center>
	<%= form_for @pet do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :breed %>
		<%= f.select :breed_id, Breed.all.map {|breed| [breed.name, breed.id]}, include_blank: true %>
		<%= f.label :gender %>
		<%= f.label :gender_male, 'Male' %>
		<%= f.radio_button :gender, 'Male' %>
		<%= f.label :gender_female, 'Female' %>
		<%= f.radio_button :gender, 'Female' %>
		<%= f.label :age %>
		<%= f.text_field :age %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<%= f.label :image %><br>
		<%= f.file_field :image %>
		<%= f.submit "Update Pet" %>
	<% end %>
</div>

<script type="text/javascript">
    $(document).ready(function() {
      $('select').material_select();
    });
</script>